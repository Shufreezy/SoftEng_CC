<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#C71B1B"
    android:id="@+id/main_layout"
    android:clickable="false">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_logo_white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cycle Calendar"
        android:id="@+id/textView"
        android:layout_marginTop="180dp"
        android:textColor="#ffffff"
        android:typeface="serif"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="bold"/>

    <EditText
        android:hint="Enter your name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:layout_marginTop="70dp"
        android:maxLength="10"
        android:gravity="center"
        android:drawableTint="#ffffff"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColorHint="#d3cfcf"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:id="@+id/username" />

    <EditText
        android:hint="Enter your date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:gravity="center"
        android:drawableTint="#ffffff"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColorHint="#d3cfcf"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:onClick="setDate"
        android:id="@+id/firstdatelastmens" />

    <EditText
        android:hint="Enter your cycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="1dp"
        android:layout_marginTop="10dp"
        android:maxLength="10"
        android:gravity="center"
        android:drawableTint="#ffffff"
        android:backgroundTint="#ffffff"
        android:layout_below="@+id/firstdatelastmens"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20sp"
        android:textColorHint="#d3cfcf"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:inputType="number"
        android:id="@+id/cycledays" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Save"
        android:id="@+id/settingsave"
        android:background="@color/white"
        android:textColor="@color/black" />


</RelativeLayout>